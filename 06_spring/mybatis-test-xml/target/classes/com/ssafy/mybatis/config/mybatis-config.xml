<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- db가 많아지면 헷갈리니까 dbinfo로 빼둔것이다 -->
	<properties resource="com/ssafy/mybatis/config/dbinfo.properties"/>
	
	<!-- mapper에서 사용할 별칭 적어둔것 -->
	<typeAliases>
		<typeAlias type="com.ssafy.mybatis.model.MemberDto" alias="memberDto" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<!-- property name은 정해져있다. 값을 내가 value로 정하는 것 -->
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="com/ssafy/mybatis/config/MemberMapper.xml" />
		<!-- 여러개 mapper 가능 -->
		<!-- <mapper resource="com/ssafy/mybatis/config/BaordMapper.xml" /> -->
	</mappers>
	
</configuration>