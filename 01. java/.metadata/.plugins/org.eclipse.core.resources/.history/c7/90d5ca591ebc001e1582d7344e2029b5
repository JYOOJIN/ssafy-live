package com.ssafy.rent.util;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;

import com.ssafy.rent.model.dto.CommercialDistrict;
import com.ssafy.rent.model.dto.EnvironmentMap;

public class CommercialDistrictReader {
    private String filePath = "res/CommercialList.csv";
    private List<CommercialDistrict> commercialDistrictList;
	
	public CommercialDistrictReader() throws IOException {
        BufferedReader bf = new BufferedReader(new InputStreamReader(new FileInputStream(this.filePath), "UTF-8"));
        commercialDistrictList = new ArrayList<>();

        String line = null;
        boolean first = true;
        while((line = bf.readLine()) != null) {
        	if(first) {
        		first = false;
        		continue;
        	}
        	
//        	line = line.substring(1);
//            line = line.substring(0, line.length()-1);
            
        	line.replaceAll("\"", line);
        	
            String[] splited = line.split(",",-1);
            
          	commercialDistrictList.add(new CommercialDistrict(splited[1], splited[4], splited[18], Integer.parseInt(splited[17]), splited[24]));
        }
    }
	
	public String cut(String line) {
		if(line.charAt(0) == '"') {
			line = line.substring(1);
	        line = line.substring(0, line.length()-1);
		}
        
        return line;
	}

	/**
	 * @return the filePath
	 */
	public String getFilePath() {
		return filePath;
	}

	/**
	 * @param filePath the filePath to set
	 */
	public void setFilePath(String filePath) {
		this.filePath = filePath;
	}

	/**
	 * @return the commercialDistrictList
	 */
	public List<CommercialDistrict> getCommercialDistrictList() {
		return commercialDistrictList;
	}

	/**
	 * @param commercialDistrictList the commercialDistrictList to set
	 */
	public void setCommercialDistrictList(List<CommercialDistrict> commercialDistrictList) {
		this.commercialDistrictList = commercialDistrictList;
	}
	
	public static void main(String args[]) throws IOException {
		CommercialDistrictReader instance = new CommercialDistrictReader();
		
		List<CommercialDistrict> list = instance.getCommercialDistrictList();
		
		System.out.println(list.get(0));
	}
}
