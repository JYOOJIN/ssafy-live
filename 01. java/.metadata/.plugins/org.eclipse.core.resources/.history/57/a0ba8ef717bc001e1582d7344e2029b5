package com.ssafy.rent.util;

import java.io.*;
import java.util.ArrayList;
import java.util.List;

public class EnvironmentMapCSVReader {
    private String filePath = "res/csv";
    private List<Environment> environmentList;
    private int index;

    public void EnvironmentMapCSVReader() throws IOException {
        BufferedReader bf = new BufferedReader(new InputStreamReader(new FileInputStream(this.filePath), "UTF-8"));
        environmentList = new ArrayList<>();

        String line = null;
        while((line = bf.readLine()) != null) {
            String[] lineContents = line.split(",(?=([^\"]*\"[^\"]*\")*[^\"]*$)",-1);

          	environmentList.add(lineContents);
        }
        this.index = 0;
    }

    public void makeList(BufferedReader bufferedReader) throws IOException {
        String line = null;
        while((line = bufferedReader.readLine())!=null) {
            String[] lineContents = line.split(",(?=([^\"]*\"[^\"]*\")*[^\"]*$)",-1);

            readCSV.add(lineContents);
        }
    }

    //한 행을 읽음
    public String[] nextRead(){
        if(readCSV.size() == index){
            return null;
        }
        return readCSV.get(index++);
    }
}
